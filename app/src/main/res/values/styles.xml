<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_title">
        <item name="android:textSize">@dimen/textsize_l4</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="text_caption">
        <item name="android:textSize">@dimen/textsize_l1</item>
        <item name="android:textColor">@color/black_54</item>
    </style>

    <style name="text_body">
        <item name="android:textSize">@dimen/textsize_l2</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="text_body_bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textsize_l3</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="textdialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="text_subtitle">
        <item name="android:textSize">@dimen/textsize_l2</item>
        <item name="android:textColor">@color/black_54</item>
    </style>

</resources>
