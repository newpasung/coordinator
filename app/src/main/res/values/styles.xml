<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_title">
        <item name="android:textSize">@dimen/textsize_l4</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="text_caption">
        <item name="android:textSize">@dimen/textsize_l1</item>
        <item name="android:textColor">@color/black_54</item>
    </style>

    <style name="text_body">
        <item name="android:textSize">@dimen/textsize_l2</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="text_body_bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textsize_l3</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="commondialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="text_subtitle">
        <item name="android:textSize">@dimen/textsize_l2</item>
        <item name="android:textColor">@color/black_54</item>
    </style>

    <style name="text_button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textsize_l2</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="bottom_toolbar_flatbtn">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textsize_l2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@drawable/bg_flat_btn</item>
    </style>

</resources>
