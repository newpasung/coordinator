<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black_24"/>
            <corners android:radius="@dimen/radius_normal"/>
        </shape>
    </item>
    <item android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/>
            <padding android:top="@dimen/padding_small"
                android:bottom="@dimen/padding_small"
                android:left="@dimen/padding_small"
                android:right="@dimen/padding_small"/>
        </shape>
    </item>
</layer-list>
