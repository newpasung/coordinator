<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_clock"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            style="@style/text_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/test_sentence_100" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:singleLine="true"
            tools:text="@string/test_sentence_20" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/iv_clock"
        android:layout_width="@dimen/iconsize_normal"
        android:layout_height="@dimen/iconsize_normal"
        android:layout_alignParentRight="true"
        tools:src="@drawable/clock_on" />

</RelativeLayout>