<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/radius_normal"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/evelation_l1"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/text_tip"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:text="@string/test_sentence_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinput"
            android:layout_below="@+id/text_tip"
            android:layout_margin="@dimen/margin_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/btn_ensure"
            android:text="@string/text_ensure"
            style="@style/text_button"
            android:layout_alignRight="@+id/textinput"
            android:layout_marginLeft="@dimen/margin_normal"
            android:background="@drawable/bg_flat_btn"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/textinput"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_flat_btn_height" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/text_button"
            android:background="@drawable/bg_flat_btn"
            android:layout_toLeftOf="@+id/btn_ensure"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_below="@+id/textinput"
            android:text="@string/text_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_flat_btn_height" />

    </RelativeLayout>
</android.support.v7.widget.CardView>