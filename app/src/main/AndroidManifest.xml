<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scut.gof.coordinator" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <application
        android:name=".CooApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="coordinator.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.scut.gof.coordinator.main.storage.model.Material,
            com.scut.gof.coordinator.main.storage.model.Project,
            com.scut.gof.coordinator.main.storage.model.RelaProject,
            com.scut.gof.coordinator.main.storage.model.RelaTask,
            com.scut.gof.coordinator.main.storage.model.Task,
            com.scut.gof.coordinator.main.storage.model.User" />
        <activity
            android:name=".main.activity.WelcomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HomeActivityStyle"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".main.activity.user.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.activity.task.TaskDetailActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".main.activity.CreateProActivity"
            android:label="新建项目"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateVisible" />

        <activity
            android:name=".main.activity.ProjectActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".main.activity.user.BaseinfoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".main.activity.ImageBrowserActivity"
            android:label="查看图片"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.activity.task.CreateTaskActivity"
            android:label="新建任务"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".main.activity.task.MyTaskActivity"
            android:label="我的任务"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.activity.task.TaskCategorySelectorActivity"
            android:label="任务分类"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.activity.user.UserSimpleListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.activity.task.TaskHierarchyActivity"
            android:label="任务列表"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".qcode.zxing.activity.CaptureActivity" />
        <activity android:name=".qcode.androidzhang.zxingframe.CheckResult" />
        <activity android:name=".qcode.androidzhang.zxingframe.ZxingFrame" />
        <activity android:name=".lib.nereo.multi_image_selector.MultiImageSelectorActivity" />
    </application>

</manifest>
